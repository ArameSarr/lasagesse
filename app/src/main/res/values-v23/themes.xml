<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème pour API 23+ avec support des icônes claires/sombres -->
    <style name="Base.Theme.Lasagesse" parent="Theme.Material3.Light.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryVariant">@color/primary_teal_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>

        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/secondary_mint</item>
        <item name="colorSecondaryVariant">@color/secondary_mint_light</item>
        <item name="colorOnSecondary">@color/text_white</item>

        <!-- Couleurs de surface -->
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Couleurs de fond -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Couleur d'erreur -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_white</item>

        <!-- Barre de statut avec icônes claires (API 23+) -->
        <item name="android:statusBarColor">@color/primary_teal_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar avec icônes sombres (API 23+) -->
        <item name="android:navigationBarColor">@color/background_white</item>
        <!--<item name="android:windowLightNavigationBar">true</item>-->
    </style>
</resources>