<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥ Gestion des Utilisateurs"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 utilisateur(s)"
            android:textSize="16sp"
            android:textColor="@color/text_white"
            android:alpha="0.9" />
    </LinearLayout>

    <!-- Contenu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Barre de recherche -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edit_recherche"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="ðŸ” Rechercher..."
                    android:background="@null"
                    android:textSize="16sp"
                    android:inputType="text" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ajouter"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="âž• Ajouter"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary_teal"
                    android:textColor="@color/text_white"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Liste des utilisateurs -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_utilisateurs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

        <!-- Message vide -->
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucun utilisateur"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center"
            android:visibility="gone"
            android:padding="32dp" />
    </LinearLayout>
</LinearLayout>