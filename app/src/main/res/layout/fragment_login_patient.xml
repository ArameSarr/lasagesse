<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_patient_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/green_dark"
                app:cardElevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_patient"
                    android:contentDescription="@string/patient_icon_desc"
                    android:padding="20dp"
                    app:tint="@android:color/white" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_title_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espace Patient"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/card_patient_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_subtitle_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connectez-vous pour accéder à votre dossier"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_patient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_identifiant_patient"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle_patient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Identifiant (Email ou Téléphone)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_identifiant_patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_password_patient"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/layout_identifiant_patient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Mot de passe">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_password_patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login_patient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Se connecter"
                android:layout_marginTop="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/layout_password_patient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/green_dark"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_register_patient_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pas encore de compte ?"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/btn_login_patient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

            <TextView
                android:id="@+id/tv_register_patient_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscrivez-vous ici"
                android:textColor="@color/green_dark"
                android:textStyle="bold"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_register_patient_prompt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

